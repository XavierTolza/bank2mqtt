# Configuration for the bank client
# These were previously set via environment variables
bank_client:
  domain: "your-bank-domain.com"
  client_id: "your-client-id"
  client_secret: "your-client-secret"

# Interval in seconds for the loop mode
# 86400 seconds = 24 hours
loop_interval: 86400

# List of handlers to process transactions
# You can enable one or more handlers here.
handlers:
  - type: ntfy
    enabled: true
    params:
      server: "https://ntfy.sh"
      topic: "bank-transactions"

  - type: mqtt
    enabled: true
    params:
      host: "192.168.1.100"
      port: 1883
      topic: "home/bank/transactions"
      # username: "myuser" # Optional
      # password: "mypass" # Optional

  - type: webhook
    enabled: false # Disabled example
    params:
      url: "https://home-assistant.local/api/webhook/bank-transaction"

  - type: email
    enabled: false # Disabled example
    params:
      smtp_host: "smtp.your-email-provider.com"
      smtp_port: 587
      smtp_user: "your-email@example.com"
      smtp_pass: "your-email-password"
      to_email: "recipient@example.com"
